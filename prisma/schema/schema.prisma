generator client {
  provider = "prisma-client"
  output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id       String  @id @default(uuid())
  name     String  @unique
  image    String
  isActive Boolean @default(true)
  meals    Meal[]
}

model Meal {
  id          String     @id @default(uuid())
  name        String
  image       String?
  price       Float
  description String
  providerId  String
  dietaryTypes  DIETSRYTYPE @default(HALAL)
  isPopular   Boolean @default(false)
  categoryId  String
  provider    Provider   @relation(fields: [providerId], references: [id])
  category    Category   @relation(fields: [categoryId], references: [id])
  cartItems   CartItem[]
  orderItems  OrderItem[]
  reviews     Review[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Provider {
  id       String  @id @default(uuid())
  name     String
  logo     String?
  address  String
  phone    String
  email    String  @unique
  isActive Boolean @default(true)

  meals Meal[]
}

enum DIETSRYTYPE{
  FLEXITERISN
  HALAL
  VEGAN
  VEGETARIAN
}